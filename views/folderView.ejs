<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <h1>Folder: <%= title %></h1>
    <%- include("partials/errors.ejs") %>
    <form action="/folder/<%= folderName %>/renameFolder/" method="POST">
      <label for="name">Rename Folder: </label>
      <input id="name" name="name" type="text" required />
      <button>Rename</button>
    </form>
    <ul>
      <li><a href="/folder/<%= folderName %>/uploadFile">Upload File</a></li>
    </ul>

    <h2>Uploaded Files</h2>
    <div class="fileContainer">
      <% files.forEach((file) => { %>
      <div class="file">
        <a href="/folder/<%= folderName %>/<%= file.name %>"><%= file.name %></a>
        <form action="/folder/<%= folderName %>/<%= file.name %>/download">
          <input type="submit" value="Download File" />
        </form>
        <form action="/folder/<%= folderName %>/<%= file.name %>/id/<%= file.id %>/delete" method="post">
          <input
            type="submit"
            value="Delete"
            onclick="return confirm('Are you sure you want to delete <%= file.name %>?')"
          />
        </form>
      </div>
      <%}) %>
    </div>
  </body>
</html>
