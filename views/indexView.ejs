<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <% if (locals.user) {%>
    <h2>Welcome Back <%= user.username %></h2>
    <ul>
      <li><a href="/admin">Admin Access</a></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>

    <h2>Uploaded Folders and Files</h2>
    <div class="folderContainer">
      <% data.forEach((folder) => { %>
      <div class="folder">
        <a href="/folder/<%= folder.name %>"><img src="folderIcon.svg" /></a>
        <%= folder.name %>
        <br />
        <br />
        <form action="/folder/<%= folder.name %>/delete" method="post">
          <input
            type="submit"
            value="Delete"
            onclick="return confirm('Are you sure? All files in <%= folder.name %> will also be deleted')"
          />
        </form>
      </div>
      <%}) %>
    </div>

    <div class="test">
      <ul>
        <li><a href="/folder/createFolder">Create Folder</a></li>
      </ul>
    </div>

    <%} else { %>
    <ul>
      <li><a href="/login">Login</a></li>
      <li><a href="/signup">Sign Up</a></li>
    </ul>
    <%}%>
  </body>
</html>
